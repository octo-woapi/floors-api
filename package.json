{
  "name": "octo-floors-api",
  "version": "0.0.0",
  "main": "src/index.js",
  "repository": "git@bitbucket.org:Inadvertance/octo-floors-api.git",
  "author": "Andrea Gueugnaut <gue@octo.com>",
  "license": "MIT",
  "private": true,
  "engines": {
    "node": ">= 8.10.0"
  },
  "scripts": {
    "dev": "nodemon -w src -i src/**/*.test.js --exec 'node src/index.js'",
    "lint": "eslint src",
    "precommit": "npm run test:unit",
    "start": "node src/index.js",
    "test": "npm run test:unit && npm run test:api",
    "test:api": "ava 'test/api/**/*.test.js'",
    "test:unit": "ava 'test/unit/**/*.test.js'",
    "test:unit:watch": "npm run test:unit -- --watch"
  },
  "dependencies": {
    "koa": "^2.5.0",
    "koa-router": "^7.4.0"
  },
  "devDependencies": {
    "ava": "^1.0.0-beta.3",
    "eslint": "^4.19.1",
    "eslint-plugin-promise": "^3.7.0",
    "generate-changelog": "^1.6.0",
    "husky": "^0.14.3",
    "nodemon": "^1.17.3",
    "nyc": "^11.6.0",
    "standard-version": "^4.3.0",
    "supertest": "^3.0.0"
  }
}
