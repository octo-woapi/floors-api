  "private": true,
  "engines": {
    "node": ">= 7.6.0"
  },
  "scripts": {
    "dev": "nodemon -w src --exec 'node bin/start'",
    "lint": "eslint src",
    "precommit": "npm test",
    "release": "standard-version",
    "start": "node bin/start",
    "pretest": "npm run lint",
