    "koa-helmet": "^4.0.0",
    "koa-logger": "^3.2.0",
    "koa-response-time": "^2.0.0",
    "koa-router": "^7.4.0",
    "koa2-validation": "^0.1.0",
    "pify": "^3.0.0"
  },
  "devDependencies": {
    "ava": "^1.0.0-beta.3",
    "eslint": "^4.19.1",
    "eslint-config-airbnb-base": "^12.1.0",
    "eslint-plugin-ava": "^4.5.1",
    "eslint-plugin-import": "^2.10.0",
    "eslint-plugin-promise": "^3.7.0",
    "generate-changelog": "^1.6.0",
