    "test:api": "ava 'test/api/**/*.test.js'",
    "test:api:watch": "npm run test:api -- --watch",
    "test:unit": "ava 'test/unit/**/*.test.js'",
    "test:unit:watch": "npm run test:unit -- --watch"
  },
  "dependencies": {
    "@koa/cors": "^2.2.1",
